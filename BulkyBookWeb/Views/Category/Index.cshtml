@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category Page";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;Create Category</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <a asp-action="Edit" asp-route-id=@obj.Id class="btn btn-primary mx-2"><i class="bi bi-pencil-square" ></i> &nbsp; Edit</a>
                    <a asp-action="Delete" asp-route-id=@obj.Id class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>